<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp">

    <!--Emre-->
    <FrameLayout
        android:id="@+id/frameRecipe"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/bg_roundedcorners"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvNameRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginEnd="30dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/medium"
            android:maxLines="2"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/icHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_heart_unfilled_white"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"/>

        <!--Daria-->
        <TextView
            android:id="@+id/tvDescriptionRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"
                app:tint="@color/white"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30min"
                android:layout_marginStart="4dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>